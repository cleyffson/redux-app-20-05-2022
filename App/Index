//arrow function
//home: criarContrato
//recebe: nome e valor
//devolve: um JASON com type = CRIAR_CONTRATO E payload a um JASON com nome e valor

const criarContrato (nome,valor) => {
    return{
        type: "CRIAR_CONTRATO",
        payload: {
            nome, valor
        }
    }
}

